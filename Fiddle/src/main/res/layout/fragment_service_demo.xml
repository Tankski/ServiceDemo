<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/demoTitle"
        android:text="@string/demo_title"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/demoSummary"
        android:text="@string/demo_summary"
        android:textSize="16dp"
        android:layout_below="@+id/demoTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/demoTimeSeeker"
        android:layout_below="@+id/demoSummary"
        android:max="60" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/demoTimeDisplay"
        android:text="@string/demo_time_display"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/demoTimeSeeker"
        android:layout_margin="@dimen/activity_vertical_margin" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/demoStartButton"
        android:text="@string/demo_start"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/demoTimeDisplay" />

</RelativeLayout>
